# Base de datos
DATABASE_URL="postgresql://user:password@localhost:5432/infovoto"

# Servidor
PORT=3000

# Frontend URL (para links de activación)
FRONTEND_URL="http://localhost:3001"

# JWT Authentication
# ==================
# Clave secreta para firmar tokens JWT (usa una clave segura en producción)
# Puedes generar una con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="tu_clave_secreta_super_segura_cambiar_en_produccion"

# Duración del token JWT (ejemplos: 1h, 24h, 7d, 30d)
JWT_EXPIRES_IN="24h"

